{% extends "layout.html.twig" %} {% block title %} {{ parent() }} - S'enregistrer {% endblock %} {% block content %}
<div class="container p-3 col-sm-5">
    <h2 style="color: #cf22ec; text-shadow: 3px 0 0 #000, -3px 0 0 #000, 0 3px 0 #000, 0 -3px 0 #000, 2px 2px #000, -2px -2px 0 #000, 2px -2px 0 #000, -2px 2px 0 #000;">Cr√©er un compte</h2>
    <form class="form-control" method="POST">
        {% if error %}
        <span style="color:red"> {{error.fields}} </span> {% endif %}
        <div class="mb-3">
            <label for="username" class="form-label">Nom d'utilisateur</label>{% if error %}
            <span style="color:red"> {{error.username}} </span> {% endif %}
            <input type="text" class="form-control nes-textarea" id="username" name="username">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Mot de passe</label>
            <input type="password" class="form-control nes-textarea" id="password" name="password">
        </div>
        <div class="mb-3">
            <label for="passwordVerif" class="form-label">Confirmer le mot de passe</label><br> {% if error %}
            <span style="color:red"> {{error.password}} </span> {% endif %}
            <input type="password" class="form-control nes-textarea" id="passwordVerif" name="passwordVerif">
        </div>
        <div class="text-end">
            <button type="submit" class="nes-btn is-primary">S'enregistrer</button>
        </div>
    </form>
</div>
{% endblock %}