{% extends "layout.html.twig" %} {% block title %} {{ parent() }} - Connexion {% endblock %} {% block content %}
<div class="container mt-5 p-5 col-sm-5">
    <h3 style="color: #cf22ec; text-shadow: 3px 0 0 #000, -3px 0 0 #000, 0 3px 0 #000, 0 -3px 0 #000, 2px 2px #000, -2px -2px 0 #000, 2px -2px 0 #000, -2px 2px 0 #000;">Connexion</h3>
    <form class="form-control" method="POST">
        <div>
            {% if error %}
            <span style="color:red"> {{ error.fields }}</span> {% endif %}
            <div class="mb-3">
                <label for="username" class="form-label">Nom d'utilisateur</label> {% if error %}
                <span style="color:red"> {{ error.email }}</span> {% endif %}
                <input type="text" class="form-control nes-textarea" id="username" name="username">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label> {% if error %}
                <span style="color:red"> {{ error.password }}</span> {% endif %}
                <input type="password" class="form-control nes-textarea" id="password" name="password">
            </div>
        </div>
        <div class="text-end">
            <button type="submit" class="nes-btn is-primary">Connexion</button>
        </div>
    </form>
</div>

{% endblock %} {% block javascript %}
<script src=" /assets/scripts/loginModal.js "></script>
{% endblock %}